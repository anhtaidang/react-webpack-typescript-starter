{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "importHelpers": true,
    "alwaysStrict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "include": ["src", "index.d.ts"],
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
